{
  "manifest_version": 2,
  "name": "ZeroNet Redirect",
  "version": "1.0",
  "description": "Automatically redirects ZeroNet domains to your local ZeroNet instance",
  "permissions": ["webRequest", "webRequestBlocking", "*://*.bit/", "*://*.yo/", "*://*.yu/", "*://*.of/", "*://*.inf/", "*://*.zn/", "*://*.list/"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "32": "icon32.png",
    "64": "icon64.png",
    "128": "icon128.png"
  }
}
